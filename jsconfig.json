{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@components/*": ["src/components/*"],
      "@components/ui/*": ["src/components/ui/*"],
      "@models/*": ["src/models/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"]
    }
  },
  "include": [
    "src/components/**/*",
    "src/models/**/*",
    "src/pages/**/*",
    "src/hooks/**/*",
    "src/styles/**/*",
    "src/utils/**/*",
    "docs/**/*"
  ]
}
